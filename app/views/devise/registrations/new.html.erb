<div class="main">
  <div class="message-wrap">
    <h2>Sign up</h2>
    <%= form_with model: @user, url: user_registration_path , local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <label class="form-text">ニックネーム</label>
        <br><%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) レシピ太郎", maxlength:"40" %>
      </div>
      <div class="field">
        <label class="form-text">Eメール</label>
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <label class="form-text">パスワード</label>
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>
      <div class="field">
        <label class="form-text">パスワード(確認)</label>
        <br><%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation" %>
      </div>
      <div class="field">
        <label class="form-text">お名前(全角)</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :family_name, class:"input-name", id:"family-name", placeholder:"例) 山田" %>
          <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 太郎" %>
      </div>
      <div class="field">
        <div class='form-text-wrap'>
          <label class="form-text">お名前カナ(全角)</label>
          <span class="indispensable">必須</span>
        </div>
        <div class='input-name-wrap'>
          <%= f.text_area :family_name_kana, class:"input-name", id:"family-name-kana", placeholder:"例) ヤマダ" %>
          <%= f.text_area :first_name_kana, class:"input-name", id:"first-name-kana", placeholder:"例) タロウ" %>
        </div>
        <div class="field">
          <div class='form-text-wrap'>
            <label class="form-text">生年月日</label>
            <span class="indispensable">必須</span>
          </div>
          <div class='input-birth-wrap'>
            <%= raw sprintf(
                        f.date_select(
                          :birth_day,
                          class:'select-birth',
                          id:"birth-day",
                          use_month_numbers: true,
                          prompt:'--',
                          start_year: 1930,
                          end_year: (Time.now.year - 5),
                          date_separator: '%s'),
                        "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
          </div>
      
          <div class="actions">
            <%= f.submit "Sign up" %>
          </div>
    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
