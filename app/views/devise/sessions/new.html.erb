<div class="main">
  <div class="message-wrap">
    <%= form_with model: @user, url: user_session_path , local: true do |f| %>
      <div class="field">
      <label class="form-text">Eメール</label>
        <br><%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
       <label class="form-text">パスワード</label>
       <br> <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "Log in" ,class:"register-red-btn" %>
      </div>
    <% end %>
  </div>
</div>
<%= render "devise/shared/links" %>
