<!DOCTYPE html>
<html>
  <head>
    <title>Tagtweet</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= favicon_link_tag('favicon.ico') %>
  </head>

  <body>
  <div class="header">
<div class="inner-header">
  <h1 class="title">
    <%= link_to "MothersTweets ", root_path ,class:"main-title" %>
   </h1>
    <div class="header_bar">
      <% if user_signed_in? %>
        <div class="user_nav">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete ,class: "post"%>
          <%= link_to "New Post", new_tweet_path, class:"post-btn"%>
        </div>
      <% else %>
        <div class="user_nav">
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
          <%= link_to "新規登録", new_user_registration_path, class: "post-btn" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

    <%= yield %>
  </body>
</html>
