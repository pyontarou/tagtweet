<div class="header">
<div class="inner-header">
  <h1 class="title">
   TagTweet
   </h1>
    <div class="header__bar row">
      <% if user_signed_in? %>
        <div class="user_nav grid-6">
          <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
          <%= link_to "New Post", new_tweet_path, class: "post" %>
        </div>
      <% else %>
        <div class="grid-6">
          <%= link_to "ログイン", new_user_session_path, class: "post" %>
          <%= link_to "新規登録", new_user_registration_path, class: "post" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<div class="main">
  <div class="message-wrap">
    <% @tweets.each do |tweet| %>
      <div class="message">
        <p class="text">
          <%= link_to tweet.message, "/tweets/#{tweet.id}" %>
        </p>
        <ul class="tag">
          <span>投稿者:</span><%= tweet.user.nickname %>
          <br><span>投稿日時:</span><%= tweet.updated_at.strftime("%Y-%m-%d %H:%M:%S") %>
          <li class="tag-list">
            <% tweet.tags.each do |tag| %>
            #<%= tag.name %>
            <% end %>
          </li>
        </ul>
      </div>
    <% end %>
  </div>
</div>